<div class="container">

  <form action="/user/create" method="POST" class="form-signup">
    <h2>Sign Up!</h2>

    <% if(flash && flash.err) { %>
      <ul class="alert alert-success">
    <% Object.keys(flash.err).forEach(function(error) { %>
      <li><%- JSON.stringify(flash.err[error]) %></li>
    <% }) %>
    </ul>
    <% } %>

    <div class="form-group">
      <label for="input-signup-username">Username</label>
      <input type="text" class="form-control" id="input-signup-username" name="username" placeholder="Enter username">
    </div>
    <div class="form-group">
      <label for="input-signup-email">Email address</label>
      <input type="email" class="form-control" id="input-signup-email" name="email" placeholder="Enter email">
    </div>
    <div class="form-group">
      <label for="input-signup-password">Password</label>
      <input type="password" class="form-control" id="input-signup-password" name="password" placeholder="Password">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <input type="hidden" name="_csrf" value="<%= _csrf %>">
  </form>

</div>